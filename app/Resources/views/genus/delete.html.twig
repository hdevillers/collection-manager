{% extends "genus/base.html.twig" %}

{% block title %}Delete the genus: {{ genus.genus }}{% endblock %}

{% block genus_body %}
    <div>
        <a class="btn btn-default" href="{{ path('genus_index') }}">
            <span class="glyphicon glyphicon-chevron-left"></span> Genus List
        </a>
    </div>

    <h2 class="sub-header">Delete a genus</h2>

    <div class="alert alert-danger" role="alert"><b>CAUTION !</b> You delete a genus !</div>

    <p>Do you confirm the deletion of the genus: <b>{{ genus.genus }}</b> ?</p>

    <form action="{{ path('genus_delete', { 'id': genus.id}) }}" method="POST">
        {{ form_rest(form) }}

        <a class="btn btn-success" href="{{ path('genus_index') }}">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <b>Cancel !</b> Comeback in a safe area :)
        </a>
        <input type="submit" class="btn btn-danger" value="Delete"/>
    </form>

{% endblock %}

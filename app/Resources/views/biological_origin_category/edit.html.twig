{% extends "biological_origin_category/base.html.twig" %}

{% block title %}Edit the category: {{ category.name }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('category_index') }}">Categories list</a></li>
    <li class="active">Edit</li>
{% endblock %}

{% block type_body %}
    <h2 class="sub-header">Edit a category</h2>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <input type="submit" class="btn btn-default pull-right" value="Save changes"/>
    {{ form_end(form) }}
{% endblock %}

{% extends "primer/base.html.twig" %}

{% block title %}Primers list{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Primers list</li>
{% endblock %}

{% block primer_body %}
    {% if app.user.isInTeam %}
        <div>
            <a class="btn btn-default" href="{{ path('primer_add') }}">
                <span class="glyphicon glyphicon-plus"></span> Add a primer
            </a>
        </div>
    {% endif %}

    <h2 class="sub-header">Primers list</h2>

    <div class="row">
        <form id="primer-search-form" method="get">
            <div class="col-md-3">
                <input type="text" id="primer-search-field" name="q" class="form-control" placeholder="Search for..." autocomplete="off" value="{{ query }}">
            </div>

            <div class="col-md-2">
                <select id="primer-team-field" name="team" class="form-control col-md-3">
                    {% for team in app.user.teams %}
                        <option value="{{ team.id }}"{{ app.user.isFavoriteTeam(team) ? 'selected="selected"' }}>{{ team.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-md-1">
                <button id="primer-search-button" class="btn btn-default" type="submit">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
                </button>
            </div>
        </form>
    </div>

    {{ list.content|raw }}
{% endblock %}

<div id="type-list">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            {% if app.user.isTeamAdministrator() or app.user.isProjectAdministrator() or is_granted('ROLE_ADMIN') %}
                <tr>
                    <th class="col-md-1">#</th>
                    <th class="col-md-9">Type</th>
                    <th class="col-md-2">Actions</th>
                </tr>
            {% else %}
                <tr>
                    <th class="col-md-1">#</th>
                    <th class="col-md-11">Type</th>
                </tr>
            {% endif %}
            </thead>
            {% if typesList is not empty %}
                {% for type in typesList %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ type.name }}</td>
                        {% if app.user.isTeamAdministrator() or app.user.isProjectAdministrator() or is_granted('ROLE_ADMIN') %}
                            <td>
                                {{ include('type/_delete_form.html.twig', { type: type }, with_context = false) }}
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% else %}
                <td class="text-center" colspan="5">There is no types.</td>
            {% endif %}
            <tbody>
            </tbody>
        </table>
    </div>

    <ul class="pagination">
        {% if nbPages > 0 %}
            {% for p in range(1, nbPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('type_index', {'q': query, 'p': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        {% else %}
            <li class="active">
                <a href="{{ path('type_index', {'q': query, 'p': 1}) }}">1</a>
            </li>
        {% endif %}
    </ul>
</div>

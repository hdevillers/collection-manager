<div id="seller-list">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-md-1">#</th>
                    <th class="col-md-3">Seller</th>
                    <th class="col-md-3">Offer reference</th>
                    <th class="col-md-3">Offer file</th>
                    <th class="col-md-2">Actions</th>
                </tr>
            </thead>
            {% if sellersList is not empty %}
                {% for seller in sellersList %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ seller.name }}</td>
                        <td>{{ seller.offerReference }}</td>
                        <td>
                            {% if seller.offerFile is not null %}
                                <a href="{{ path('download_seller_offer', { 'slug': seller.slug }) }}">
                                    <span class=" glyphicon glyphicon-download" aria-hidden="true"></span> Document
                                </a>
                            {% else %}
                                No file
                            {% endif %}
                        </td>
                        <td>
                            {% embed "seller/_delete_form.html.twig" with { seller: seller } only %}
                                {% block btn %}
                                    <a class="btn btn-warning" href="{{ path('seller_edit', { 'id': seller.id}) }}">
                                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
                                    </a>
                                {% endblock %}
                            {% endembed %}
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <td class="text-center" colspan="5">There is no sellers.</td>
            {% endif %}
            <tbody>
            </tbody>
        </table>
    </div>

    <ul class="pagination">
        {% set nbExtremPages, nbBorderPages = 3, 2 %}

        {% if nbPages > 1 %}
            <li{% if page == 1 %} class="disabled"{% endif %}>
                <a href="{{ path('seller_index', {'q': query, 'p': page - 1}) }}">&laquo;</a>
            </li>

            {% for p in range(1, nbPages) %}
                {% if
                ( p <= nbExtremPages ) or
                ( p < page and (p >= (page - nbBorderPages)) ) or
                ( p == page ) or
                ( p > page and (p <= (page + nbBorderPages)) ) or
                ( p > (nbPages - nbExtremPages) )
                %}
                    <li{% if p == page %} class="active"{% endif %}>
                        <a href="{{ path('seller_index', {'q': query, 'p': p}) }}">{{ p }}</a>
                    </li>
                {% elseif
                ((p == (page - nbBorderPages - 1)) or (p == (page + nbBorderPages + 1 )))
                %}
                    <li>
                        <span>...</span>
                    </li>
                {% endif %}
            {% endfor %}

            <li{% if page == nbPages %} class="disabled"{% endif %}>
                <a href="{{ path('seller_index', {'q': query, 'p': page + 1}) }}" >&raquo;</a>
            </li>
        {% endif %}
    </ul>
</div>

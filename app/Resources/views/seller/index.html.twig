{% extends "seller/base.html.twig" %}

{% block title %}Sellers list{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Sellers list</li>
{% endblock %}

{% block seller_body %}
    {% if app.user.isInGroup() or is_granted('ROLE_ADMIN') %}
        <div>
            <a class="btn btn-default" href="{{ path('seller_add') }}">
                <span class="glyphicon glyphicon-plus"></span> Add a seller
            </a>
        </div>
    {% endif %}

    <h2 class="sub-header">Sellers list</h2>

    {% include '_list_filter.html.twig' with {
        'url': url('seller_index', {'q': '__query__', 'p': '__page__'}),
        'ajaxUrl': url('seller_index_ajax', {'q': '__query__', 'p': '__page__'})
    } %}

    {{ list.content|raw }}
{% endblock %}

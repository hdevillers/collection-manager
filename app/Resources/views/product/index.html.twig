{% extends "product/base.html.twig" %}

{% block title %}Products list{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Products list</li>
{% endblock %}

{% block product_body %}
    {% if app.user.isInGroup() %}
        <div>
            <a class="btn btn-default" href="{{ path('product_add') }}">
                <span class="glyphicon glyphicon-plus"></span> Add a product
            </a>
        </div>
    {% endif %}

    <h2 class="sub-header">Products list</h2>

    {% include '_list_filter.html.twig' with {
        'url': url('product_index', {'q': '__query__', 'group': '__group__', 'p': '__page__'}),
        'ajaxUrl': url('product_index_ajax', {'q': '__query__', 'group': '__group__', 'p': '__page__'})
    } %}

    {{ list.content|raw }}
{% endblock %}

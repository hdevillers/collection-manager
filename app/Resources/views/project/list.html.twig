<div id="project-list">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                {% if app.user.isTeamAdministrator or app.user.isProjectAdministrator or is_granted('ROLE_ADMIN') %}
                    <th class="col-md-1">#</th>
                    <th class="col-md-2">Name</th>
                    <th class="col-md-2">Prefix</th>
                    <th class="col-md-5">Description</th>
                    <th class="col-md-2">Actions</th>
                {% else %}
                    <th class="col-md-1">#</th>
                    <th class="col-md-2">Name</th>
                    <th class="col-md-2">Prefix</th>
                    <th class="col-md-7">Description</th>
                {% endif %}
            </tr>
            </thead>

            <tbody>
            {% if projectList is not empty %}
                {% for project in projectList %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ project.name }}</td>
                        <td>{{ project.prefix }}</td>
                        <td>{{ project.description|truncate(100, true) }}</td>
                        {% if app.user.isTeamAdministrator or app.user.isProjectAdministrator or is_granted('ROLE_ADMIN') %}
                            <td>
                                <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                    {% if is_granted('PROJECT_EDIT', project) %}
                                        <a class="btn btn-warning" href="{{ path('project_edit', { 'id': project.id}) }}"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit</a>
                                    {% endif %}

                                    {% if is_granted('PROJECT_DELETE', project) %}
                                        <a class="btn btn-danger" href="{{ path('project_delete', { 'id': project.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
                                    {% endif %}
                                </div>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">There are no projects.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>

    <ul class="pagination">
        {% if nbPages > 0 %}
            {% for p in range(1, nbPages) %}
                <li{% if p == page %} class="active"{% endif %}>
                    <a href="{{ path('project_index', {'q': query, 'p': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        {% else %}
            <li class="active">
                <a href="{{ path('project_index', {'q': query, 'p': 1}) }}">1</a>
            </li>
        {% endif %}
    </ul>
</div>

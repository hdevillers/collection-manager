{% extends "project/base.html.twig" %}

{% block title %}Edit the project: {{ project.name }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('project_index') }}">Projects list</a></li>
    <li><a href="{{ path('project_view', { 'slug': project.slug }) }}">{{ project.name }}</a></li>
    <li class="active">Edit</li>
{% endblock %}

{% block project_body %}
    <h2 class="sub-header">Edit a project</h2>
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.prefix) }}
        {{ form_row(form.description) }}
        {{ form_row(form.private) }}
        {{ form_row(form.team) }}
        {{ form_row(form.team_filter) }}
        <div class="row">
            <div class="col-md-5  col-md-offset-2">
                {{ form_row(form.administrators) }}
            </div>
            <div class="col-md-5">
                {{ form_row(form.members) }}
            </div>
        </div>

        {{ form_rest(form) }}

    <input type="submit" class="btn btn-default pull-right" value="Edit" />
    {{ form_end(form) }}
{% endblock %}

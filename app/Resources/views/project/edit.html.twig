{% extends "project/base.html.twig" %}

{% block title %}Edit the project: {{ project.name }}{% endblock %}

{% block project_body %}
    <div>
        <a class="btn btn-default" href="{{ path('project_index') }}">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span> Projects list
        </a>
    </div>

    <h2 class="sub-header">Edit a project</h2>
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.prefix) }}
        {{ form_row(form.description) }}
        {{ form_row(form.team) }}
        {{ form_row(form.team_filter) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.administrators) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.members) }}
            </div>
        </div>

        {{ form_rest(form) }}

    <input type="submit" class="btn btn-default pull-right" value="Edit" />
    {{ form_end(form) }}
{% endblock %}

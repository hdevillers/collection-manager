{% extends "team/base.html.twig" %}

{% block title %}Add a team{% endblock %}

{% block team_body %}
    <h2>Add a team</h2>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.administrators) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.members) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <input type="submit" class="btn btn-default pull-right" value="Add" />
    {{ form_end(form) }}
{% endblock %}

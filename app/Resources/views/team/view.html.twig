{% extends "team/base.html.twig" %}

{% block title %}{{ team.name }} - {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('team_index') }}">Teams</a></li>
    <li class="active">{{ team.name }}</li>
{% endblock %}

{% block team_body %}

    {% if app.user.isAdministratorOf(team) or is_granted('ROLE_ADMIN') %}
        <div>
            <a type="button" class="btn btn-default btn-warning btn-xs pull-right" value="Edit" href="{{ path("team_edit", {'slug': team.slug }) }}">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            </a>
        </div>
    {% endif %}


    <h2>{{ team.name }}</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Administrators</div>
                <ul class="list-group">
                    {% for administrator in team.administrators %}
                        <li class="list-group-item">{{ administrator.firstName }} {{ administrator.lastName }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">Members</div>
                <ul class="list-group">
                    {% for member in team.members %}
                        <li class="list-group-item">{{ member.firstName }} {{ member.lastName }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

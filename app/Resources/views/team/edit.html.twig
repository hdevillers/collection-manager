{% extends "team/base.html.twig" %}

{% block title %}Edit a team{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('team_index') }}">Teams</a></li>
    <li><a href="{{ path('team_view', { 'slug': team.slug }) }}">{{ team.name }}</a></li>
    <li class="active">Edit</li>
{% endblock %}

{% block team_body %}
    <h2 class="sub-header">Edit the team: {{ team.name }}</h2>

    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.team_filter) }}

        <div class="row">
            <div class="col-md-5  col-md-offset-2">
                {{ form_row(form.administrators) }}
            </div>
            <div class="col-md-5">
                {{ form_row(form.members) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <input type="submit" class="btn btn-default pull-right" value="Edit" />
    {{ form_end(form) }}
{% endblock %}

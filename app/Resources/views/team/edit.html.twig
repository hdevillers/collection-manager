{% extends "team/base.html.twig" %}

{% block title %}Edit a team{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('team_index') }}">Teams</a></li>
    <li><a href="{{ path('team_view', { 'slug': team.slug }) }}">{{ team.name }}</a></li>
    <li class="active">Edit</li>
{% endblock %}

{% block team_body %}
    <h2 class="sub-header">Edit the team: {{ team.name }}</h2>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-default" value="Edit" />
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('#team_administrators').select2();
        $('#team_members').select2();
    </script>
{% endblock %}

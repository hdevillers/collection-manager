{% extends "team/base.html.twig" %}

{% block title %}Edit a team{% endblock %}

{% block team_body %}
    <div>
        <a type="button" class="btn btn-default" href="{{ path('team_index') }}">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            Teams list
        </a>
    </div>

    <h2>Edit the team: {{ team.name }}</h2>

    {{ form_start(form) }}
    {{ form_row(form.name) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.administrators) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.members) }}
        </div>
    </div>

    {{ form_rest(form) }}

    <input type="submit" class="btn btn-default pull-right" value="Edit" />
    {{ form_end(form) }}
{% endblock %}

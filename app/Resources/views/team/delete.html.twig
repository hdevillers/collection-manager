{% extends "team/base.html.twig" %}

{% block title %}Delete the team: {{ team.name }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('team_index') }}">Teams</a></li>
    <li><a href="{{ path('team_view', { id: team.id }) }}">{{ team.name }}</a></li>
    <li class="active">Delete</li>
{% endblock %}

{% block team_body %}
    <div>
        <a type="button" class="btn btn-default" href="{{ path('team_index') }}">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            Teams list
        </a>
    </div>

    <h2>Delete the team: {{ team.name }}</h2>

    <div class="alert alert-danger" role="alert"><b>WARNING !</b> You delete a team !</div>

    <p>Do you confirm the deletion of the team: <b>{{ team.name }}</b> ?</p>

    <form action="{{ path('team_delete', {'id': team.id}) }}" method="post">
        {# Ceci va générer le champ CSRF #}
        {{ form_rest(form) }}

        <a class="btn btn-success" href="{{ path('team_index') }}">
            <i class="glyphicon glyphicon-chevron-left"></i>
            <b>Cancel !</b> Comeback in a safe area :)
        </a>

        {# Ici j'ai écrit le bouton de soumission à la main #}
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
{% endblock %}

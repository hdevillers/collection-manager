<div id="box-list">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                    <th class="col-md-1">#</th>
                    <th class="col-md-2">Name</th>
                    <th class="col-md-6">Description</th>
                    <th class="col-md-1">Project</th>
                    <th class="col-md-1">Free space</th>
                    <th class="col-md-1">Auto Name</th>
            </tr>
            </thead>

            <tbody>
            {% if boxList is not empty %}
                {% for box in boxList %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ box.name }}</td>
                        <td>{{ box.description|truncate(50, true) }}</td>
                        <td>{{ box.project.name }}</td>
                        <td>{{ box.freeSpace }} / {{ box.cellNumber }}</td>
                        <td><a href="{{ path('box_view', { 'id': box.id, 'slug': box.slug }) }}">{{ box.autoName }}</a></td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">There are no boxes.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>

    <ul class="pagination">
        {% set nbExtremPages, nbBorderPages = 3, 2 %}

        {% if nbPages > 1 %}
            <li{% if page == 1 %} class="disabled"{% endif %}>
                <a href="{{ path('box_index', {'q': query, 'project': project, 'p': page - 1}) }}">&laquo;</a>
            </li>

            {% for p in range(1, nbPages) %}
                {% if
                ( p <= nbExtremPages ) or
                ( p < page and (p >= (page - nbBorderPages)) ) or
                ( p == page ) or
                ( p > page and (p <= (page + nbBorderPages)) ) or
                ( p > (nbPages - nbExtremPages) )
                %}
                    <li{% if p == page %} class="active"{% endif %}>
                        <a href="{{ path('box_index', {'q': query, 'project': project, 'p': p}) }}">{{ p }}</a>
                    </li>
                {% elseif
                ((p == (page - nbBorderPages - 1)) or (p == (page + nbBorderPages + 1 )))
                %}
                    <li>
                        <span>...</span>
                    </li>
                {% endif %}
            {% endfor %}

            <li{% if page == nbPages %} class="disabled"{% endif %}>
                <a href="{{ path('box_index', {'q': query, 'project': project, 'p': page + 1}) }}" >&raquo;</a>
            </li>
        {% endif %}
    </ul>
</div>

{% extends "box/base.html.twig" %}

{% block title %}Delete the box: {{ box.name }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('box_index') }}">Boxes list</a></li>
    <li><a href="{{ path('box_view', { id: box.id }) }}">{{ box.project.prefix }}_Box{{ box.boxLetter }} ({{ box.name }})</a></li>
    <li class="active">Delete</li>
{% endblock %}

{% block box_body %}
    <h2 class="sub-header">Delete a box</h2>

    <div class="alert alert-danger" role="alert"><b>CAUTION !</b> You delete a box !</div>

    <p>Do you confirm the deletion of the box: <b>{{ box.name }}</b> ?</p>

    <form action="{{ path('box_delete', {'id': box.id}) }}" method="post">
        {# Ceci va générer le champ CSRF #}
        {{ form_rest(form) }}

        <a href="{{ path('box_view', { id: box.id }) }}" class="btn btn-success">
            <i class="glyphicon glyphicon-chevron-left"></i>
            <b>Cancel !</b> Comeback to the box
        </a>

        {# Ici j'ai écrit le bouton de soumission à la main #}
        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>

{% endblock %}

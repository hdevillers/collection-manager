{% if results is defined %}
    <div class="showhide-1">
        <h3>Gmo Strains</h3>
        <div class="searchResults">
            <table class="table table-striped">
                <tr>
                    <th class="col-md-1">#</th>
                    <th class="col-md-5">Auto Name</th>
                    <th class="col-md-5">Name</th>
                    <th class="col-md-1">Actions</th>
                </tr>
                {% if results['gmo'] is defined and results['gmo'] is not empty %}
                    {% for result in results['gmo'] %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td><a href="{{ path('strain_gmo_view', { 'id': result.id }) }}">{{ result.systematicName }}</a></td>
                            <td>{{ result.usualName }}</td>
                            <td>
                                <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                    {% if is_granted('STRAIN_EDIT', result) %}
                                        <a class="btn btn-warning" href="{{ path('strain_gmo_edit', { 'id': result.id }) }}"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit</a>
                                    {% endif %}

                                    {% if is_granted('STRAIN_DELETE', result) %}
                                        {% if result.deleted %}
                                            <a class="btn btn-danger" href="#" disabled><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
                                        {% else %}
                                            <a class="btn btn-danger" href="{{ path('strain_gmo_delete', { 'id': result.id }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</a>
                                        {% endif %}
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3" style="text-align:center;">There is no result.</td>
                    </tr>
                {% endif %}
            </table>
        </div>
    </div>

    <div class="showhide-2">
        <h3>Wild Strains</h3>

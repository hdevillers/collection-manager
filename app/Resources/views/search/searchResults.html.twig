{% if results is defined %}
    <div class="showhide-1">
        <h3>Gmo Strains</h3>
        <div class="searchResults">
            <table class="table table-striped">
                <tr>
                    <th class="col-md-1">#</th>
                    <th class="col-md-6">Auto Name</th>
                    <th class="col-md-6">Name</th>
                </tr>
                {% if results['gmo'] is defined and results['gmo'] is not empty %}
                    {% for result in results['gmo'] %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td><a href="{{ path('strain_gmo_view', { 'id': result.id }) }}">{{ result.systematicName }}</a></td>
                            <td>{{ result.usualName }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3" style="text-align:center;">There is no result.</td>
                    </tr>
                {% endif %}
            </table>
        </div>
    </div>

    <div class="showhide-2">
        <h3>Wild Strains</h3>
        <div class="searchResults">
            <table class="table table-striped">
                <tr>
                    <th class="col-md-1">#</th>
                    <th class="col-md-6">Auto Name</th>
                    <th class="col-md-6">Name</th>
                </tr>
                {% if results['wild'] is defined and results['wild'] is not empty %}
                    {% for result in results['wild'] %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td><a href="{{ path('strain_wild_view', { 'id': result.id }) }}">{{ result.systematicName }}</a></td>
                            <td>{{ result.usualName }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3" style="text-align:center;">There is no result.</td>
                    </tr>
                {% endif %}
            </table>
        </div>
    </div>
{% endif %}


<div id="filtered-list">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-md-1">#</th>
                    <th class="col-md">Brand</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th class="col-md-2">Actions</th>
                    {% endif %}
                </tr>
            </thead>
            {% if results.results is not empty %}
                {% for brand in results.results %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ brand.name }}</td>
                        <td>
                            {% if is_granted('ROLE_ADMIN') %}
                                {% embed "brand/_delete_form.html.twig" with { brand: brand } only %}
                                    {% block btn %}
                                        <a class="btn btn-warning" href="{{ path('brand_edit', { 'id': brand.id}) }}">
                                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
                                        </a>
                                    {% endblock %}
                                {% endembed %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <td class="text-center" colspan="5">There is no brands.</td>
            {% endif %}
            <tbody>
            </tbody>
        </table>
    </div>

    {% include '_list_pagination.html.twig' with { 'url': path('brand_index', {'q': '__query__', 'p': '__page__' }) } %}
</div>

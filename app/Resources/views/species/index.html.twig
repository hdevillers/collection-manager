{% extends "species/base.html.twig" %}

{% block title %}Species list{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Species list</li>
{% endblock %}

{% block species_body %}
    {% if app.user.isTeamAdministrator() or app.user.isProjectAdministrator() or is_granted('ROLE_ADMIN') %}
        <div>
            <a class="btn btn-default" href="{{ path('species_add') }}">
                <span class="glyphicon glyphicon-plus"></span> Add a species
            </a>
        </div>
    {% endif %}

    <h2 class="sub-header">Species List</h2>

    <div class="row">
        <form id="species-search-form" method="get">
            <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" id="species-search-field" name="q" class="form-control" placeholder="Search for..." autocomplete="off" value="{{ query }}">
                        <span class="input-group-btn">
                            <button id="species-search-button" class="btn btn-default" type="submit">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </button>
                        </span>
                    </div>
            </div>
        </form>
    </div>

    {{ list.content|raw }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('input#species-search-field').keyup(function() {
            var field = $(this);
            $.ajax({
                type: 'GET',
                url: Routing.generate('species_index_ajax', { q: field.val(), p: 1 }),
                dataType: 'html',
                success: function (html) {
                    history.replaceState('', '', Routing.generate('species_index', { q: field.val(), p: 1 }));
                    $('#species-list').replaceWith(html);
                }
            });

        });
    </script>
{% endblock %}

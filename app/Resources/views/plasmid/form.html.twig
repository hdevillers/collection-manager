{{ form_start(form) }}
    {% if form.team is defined %}
        {{ form_row(form.team) }}
    {% endif %}
    {{ form_row(form.name) }}

    {{ form_row(form.addGenBankFile) }}
    <div id="genBank-file-field" class="col-sm-10 col-md-offset-2">
        <div>
            {% if app.request.requesturi != path('plasmid_add') and plasmid.genBankFile.path is defined and plasmid.genBankFile.path is not null %}
                Actual file: <a href="{{ asset(plasmid.genBankFile.webPath) }}">{{ plasmid.autoName }}-{{ plasmid.name }}.gbk</a>
            {% endif %}
        </div>
        {{ form_widget(form.genBankFile.fileSystemPath) }}
    </div>

    {{ form_row(form.primers) }}
    {{ form_widget(form) }}
{{ form_end(form) }}

{% extends "plasmid/base.html.twig" %}

{% block title %}Plasmid{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('plasmid_index') }}">Plasmids list</a></li>
    <li><a href="{{ path('plasmid_view', { 'id': plasmid.id, 'slug': plasmid.slug }) }}">{{ plasmid.autoName }} - {{ plasmid.name }}</a></li>
    <li class="active">Edit</li>
{% endblock %}

{% block plasmid_body %}
    <h2 class="sub-header">Edit the plasmid: {{ plasmid.autoName }} - {{ plasmid.name }}</h2>

    {{ include('plasmid/form.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $( function() {
            charMap($('#plasmid_edit_name'));
            collectionType($('div#plasmid_edit_primers'), 'Add a primer', 'add-primer');

            $('[id^="plasmid_edit_primers_"]').select2();
            $('#add-primer').click(function() {
                $('[id^="plasmid_edit_primers_"]').select2();
            });
        } );
    </script>
{% endblock %}

<div id="plasmid-list">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th class="col-md-1">#</th>
                <th class="col-md-8">Name</th>
                <th class="col-md-2">File</th>
                <th class="col-md-1">Auto name</th>
            </tr>
            </thead>
            {% if plasmidsList is not empty %}
                {% for plasmid in plasmidsList %}
                    <tr>
                        <td>{{ loop.index }}</td>

                        <td>{{ plasmid.name }}</td>
                        <td>
                            {% if plasmid.genBankFile is not null %}
                                <a href="{{ path('download_plasmid', { 'team_slug': plasmid.team.slug, 'autoName': plasmid.autoName, 'name': plasmid.name }) }}">
                                    <span class=" glyphicon glyphicon-download" aria-hidden="true"></span> GenBank file
                                </a>
                            {% else %}
                                No GenBank file
                            {% endif %}
                        </td>
                        <td><a href="{{ path('plasmid_view', { 'id': plasmid.id, 'slug': plasmid.slug }) }}">{{ plasmid.autoName }}</a></td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5"  style="text-align:center;">There is no plasmids.</td>
                </tr>
            {% endif %}
            <tbody>
            </tbody>
        </table>
    </div>

    <ul class="pagination">
        {% set nbExtremPages, nbBorderPages = 3, 2 %}

        {% if nbPages > 1 %}
            <li{% if page == 1 %} class="disabled"{% endif %}>
                <a href="{{ path('plasmid_index', {'q': query, 'p': page - 1}) }}">&laquo;</a>
            </li>

            {% for p in range(1, nbPages) %}
                {% if
                ( p <= nbExtremPages ) or
                ( p < page and (p >= (page - nbBorderPages)) ) or
                ( p == page ) or
                ( p > page and (p <= (page + nbBorderPages)) ) or
                ( p > (nbPages - nbExtremPages) )
                %}
                    <li{% if p == page %} class="active"{% endif %}>
                        <a href="{{ path('plasmid_index', {'q': query, 'p': p}) }}">{{ p }}</a>
                    </li>
                {% elseif
                ((p == (page - nbBorderPages - 1)) or (p == (page + nbBorderPages + 1 )))
                %}
                    <li>
                        <span>...</span>
                    </li>
                {% endif %}
            {% endfor %}

            <li{% if page == nbPages %} class="disabled"{% endif %}>
                <a href="{{ path('plasmid_index', {'q': query, 'p': page + 1}) }}" >&raquo;</a>
            </li>
        {% endif %}
    </ul>
</div>

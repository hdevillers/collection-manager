<h2 class="sub-header">Edit a strain</h2>

<div class="row">
    {{ form_start(form) }}
        {{ form_row(form.genus) }}
        {{ form_row(form.species) }}
        {{ form_widget(form) }}

        {% if 'wild' == typeOfStrain %}
            <div class="btn-group pull-right" role="group" aria-label="...">
                <input type="button" id="reverseGeocode" class="btn btn-default" value="Reverse Geocode">
                <input type="submit" class="btn btn-default" value="Edit">
            </div>
        {% else %}
            <input type="submit" class="btn btn-default pull-right" value="Add">
        {% endif %}
    {{ form_end(form) }}
</div>

{% if 'wild' == typeOfStrain %}
    <div class="row">
        <hr>
        <div id="map" style="height:400px;"></div>
    </div>
{% endif %}

{% extends "strain/base.html.twig" %}

{% block title %}Delete the strain {{ strain.autoName }} - {{ strain.name }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('strain_index') }}">Strains</a></li>
    <li><a href="{{ path('strain_gmo_view', { id: strain.id }) }}">{{ strain.autoName }} - {{ strain.name }}</a></li>
    <li class="active">Delete</li>
{% endblock %}

{% block strain_body %}
    <h2 class="sub-header">Delete a strain</h2>

    <div class="alert alert-danger" role="alert"><b>WARNING !</b> You're deleting a strain !</div>

    <p>Do you confirm the deletion of: <b>{{ strain.autoName }} - {{ strain.name }}</b> ?</p>

    <form action="{{ path('strain_gmo_delete', {'id': strain.id}) }}" method="post">
        {# Generate CSRF field #}
        {{ form_rest(form) }}

        <a href="{{ path('strain_gmo_view', { id: strain.id }) }}" class="btn btn-success">
            <i class="glyphicon glyphicon-chevron-left"></i>
            <b>Cancel !</b> Comeback to the strain
        </a>

        <input type="submit" value="Delete" class="btn btn-danger" />

    </form>
{% endblock %}

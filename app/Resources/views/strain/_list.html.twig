<div id="strain-list">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th class="col-md-1">#</th>
                <th class="col-md-10">Name</th>
                <th class="col-md-1">GMO/Wild</th>
                <th class="col-md-1">Auto name</th>
            </tr>
            <tbody>
            {% if strainList is not empty %}
                {% for strain in strainList %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ strain.name }}</td>
                        <td>
                            {{ 'gmo' == strain.discriminator ? 'GMO' : 'Wild'  }}
                        </td>
                        <td><a href="{{ path('strain_view', { 'id': strain.id, 'slug': strain.slug }) }}">{{ strain.autoName }}</a></td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td class="text-center" colspan="5">There are no strains.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>

    <ul class="pagination">
        {% set nbExtremPages, nbBorderPages = 3, 2 %}

        {% if nbPages > 1 %}
            <li{% if page == 1 %} class="disabled"{% endif %}>
                <a href="{{ path('strain_index', {'q': query, 'project': project, 'p': page - 1}) }}">&laquo;</a>
            </li>

            {% for p in range(1, nbPages) %}
                {% if
                    ( p <= nbExtremPages ) or
                    ( p < page and (p >= (page - nbBorderPages)) ) or
                    ( p == page ) or
                    ( p > page and (p <= (page + nbBorderPages)) ) or
                    ( p > (nbPages - nbExtremPages) )
                %}
                    <li{% if p == page %} class="active"{% endif %}>
                        <a href="{{ path('strain_index', {'q': query, 'project': project, 'p': p}) }}">{{ p }}</a>
                    </li>
                {% elseif
                    ((p == (page - nbBorderPages - 1)) or (p == (page + nbBorderPages + 1 )))
                %}
                    <li>
                        <span>...</span>
                    </li>
                {% endif %}
            {% endfor %}

            <li{% if page == nbPages %} class="disabled"{% endif %}>
                <a href="{{ path('strain_index', {'q': query, 'project': project, 'p': page + 1}) }}" >&raquo;</a>
            </li>
        {% endif %}
    </ul>
</div>

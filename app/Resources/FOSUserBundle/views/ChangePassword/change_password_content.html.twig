{% trans_default_domain 'FOSUserBundle' %}

<div>
    <a class="btn btn-default" href="{{ path('fos_user_profile_show') }}">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> My profile
    </a>
</div>

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" class="btn btn-default pull-right" value="{{ 'change_password.submit'|trans }}" />
    </div>
{{ form_end(form) }}
